.fandogh-input
  font-size: 14px;
  background: rgb(27,0,106,.8);
  border: none;
  width: 370px;
  display inline-block
  color #fff;
  padding 10px
  border-radius 4px
  direction ltr
  box-sizing border-box
  font-family Roboto, sans-serif, yekan
  font-weight normal
.input-color-blue::-webkit-input-placeholder
	color #ECECEC
	text-align right
	
.input-color-blue:-moz-placeholder
	color #ECECEC
	text-align right

.input-color-blue::-moz-placeholder
	color #ECECEC
	text-align right

.input-color-blue:-ms-input-placeholder
	color #ECECEC
	text-align right

.input-white
  background-color: #ffffff;
  border: solid 1px #e7e8ea;
  color #000
  font-size 14px


.input-dashboard
  padding 15px
  border-radius 10px
  color #47494e
.input-dashboard::-webkit-input-placeholder
  text-align right
  font-size 12px
.input-dashboard:-moz-placeholder
  text-align right
  font-size 12px
.input-dashboard::-webkit-input-placeholder
  text-align right
  font-size 12px
.input-disable
  pointer-events none
  border 1px solid #b5b5b5
  background transparent
  text-align center
  color #4f4f4f
  font-size 14px
  direction rtl
  font-family yekan
.input-yekan 
  font-family yekan
.input-rtl 
  direction: rtl
@media only screen and (max-width: 576px)
  .fandogh-input
    font-size: 13px
    width: 270px

.input-block
  width 100%